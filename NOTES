CHECKINPUT: Chequea que sólo se ingrese un número entero:
int checkinput() //Chequea que el ingreso sea un numero entero, no letra, o whitespace
{
int tam = -1;
while(tam < 1 )
    {
        //Chequea que la variable no sea whitespace. spax[0] es un whitespace.
        char spax[1];
        spax[0] = ' ';
         cout<<"Ingrese un numero entero por favor:"<<endl;
         char c;
         //Si falla al leer (no hay input) o el sig caracter despues del numero no es un whitespace (o coma o punto)
         if( !( cin>>tam ) || (cin.get(c) && !spax[0]) )
         {
             cin.clear();
             cin.ignore( 500, '\n' );
             tam = -1 ; //entra al loop de nuevo
             system("cls");
             cout << "Opcion invalida. " ;
             system("pause");
         }
         else if( tam < 1 )
         {
            system("cls");
            cout << "Opcion invalida. " ;
            system("pause");
         }
    }
    return tam; //Devuelve input en caso de ser un entero
}
